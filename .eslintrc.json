{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    // Disable rules you want to turn off
    "react/react-in-jsx-scope": "off", // React 17+ doesn't need to be in scope
    "react/prop-types": "off", // Disable prop-types (if you're using TypeScript)
    "no-unused-vars": "off", // Turn off unused variable checking (not recommended)
    "no-console": "off", // Disable the rule that prevents `console` statements
    "semi": "off", // Turn off the requirement for semicolons
    "quotes": "off", // Disable enforcing of quotes style
    "react/jsx-uses-react": "off", // Not necessary in React 17 and later
    "react/jsx-uses-vars": "off" // Not necessary with modern React and Next.js
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
